<div class="mt-4">
  <h3>Tạo khóa học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Nhập tên khóa học</label>
      <input type="text" class="form-control" id="name" name="name"/>  
    </div>
    <div class="form-group">
      <label for="description">Nhập mô tả khóa học</label>
      <input type="text" class="form-control" id="description" name="description"/>  
    </div>
    <div class="form-group">
      <label for="videoId">Nhập video ID</label>
      <input type="text" class="form-control" id="videoId" name="videoId"/>  
    </div>
    <div class="form-group">
      <label for="level">Nhập level</label>
      <input type="text" class="form-control" id="level" name="level"/>  
    </div>
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>