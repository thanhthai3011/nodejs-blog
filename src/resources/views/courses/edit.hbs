<div class="mt-4">
  <h3>Sửa khóa học</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Nhập tên khóa học</label>
      <input type="text" value="{{course.name}}" class="form-control" id="name" name="name"/>  
    </div>
    <div class="form-group">
      <label for="description">Nhập mô tả khóa học</label>
      <textarea name="description" id="description" class="form-control" cols="30" rows="3">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Nhập video ID</label>
      <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId"/>  
    </div>
    <div class="form-group">
      <label for="level">Nhập level</label>
      <input type="text" class="form-control" value="{{course.level}}" id="level" name="level"/>  
    </div>
    <button type="submit" class="btn btn-primary">Sửa khóa học</button>
  </form>
</div>